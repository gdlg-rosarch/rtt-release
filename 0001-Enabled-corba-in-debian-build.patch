From: Johannes Meyer <johannes@intermodalics.eu>
Date: Fri, 23 Jan 2015 16:58:37 +0100
Subject: [PATCH] Enabled corba in debian build

---
 debian/rules.em | 3 ++-
 1 file changed, 2 insertions(+), 1 deletion(-)

diff --git a/debian/rules.em b/debian/rules.em
index 991c991..53598d5 100755
--- a/debian/rules.em
+++ b/debian/rules.em
@@ -30,7 +30,8 @@ override_dh_auto_configure:
 	dh_auto_configure -- \
 		-DCATKIN_BUILD_BINARY_PACKAGE="1" \
 		-DCMAKE_INSTALL_PREFIX="@(InstallationPrefix)" \
-		-DCMAKE_PREFIX_PATH="@(InstallationPrefix)"
+		-DCMAKE_PREFIX_PATH="@(InstallationPrefix)" \
+		-DENABLE_CORBA=TRUE -DCORBA_IMPLEMENTATION=OMNIORB
 
 override_dh_auto_build:
 	# In case we're installing to a non-standard location, look for a setup.sh
